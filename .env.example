# MCP Gateway - Local Development Environment Variables

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
LOG_LEVEL=debug

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=mcp_gateway
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Secrets Management
SECRETS_PROVIDER=env  # Use 'env' for local dev, 'aws' for production

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=168h

# OAuth 2.0 (Optional - only if using OAuth)
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=

# LDAP/AD (Optional - only if using LDAP)
LDAP_HOST=
LDAP_PORT=389
LDAP_BIND_DN=
LDAP_BIND_PASSWORD=
LDAP_BASE_DN=

# Rate Limiting
RATE_LIMIT_PER_USER_HOURLY=1000
RATE_LIMIT_PER_IP_MINUTE=100

# AWS (Production only)
AWS_REGION=us-east-1
AWS_SECRET_PREFIX=mcp-gateway

# Monitoring
PROMETHEUS_PORT=9090
PROMETHEUS_ENABLED=true
