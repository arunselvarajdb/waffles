# MCP Gateway - Local Development Environment Variables

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
LOG_LEVEL=debug

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=mcp_gateway
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Secrets Management
SECRETS_PROVIDER=env  # Use 'env' for local dev, 'aws' for production

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=168h

# SSO/OIDC Configuration (Optional - works with any OIDC provider)
# Supports: Authentik, Keycloak, Okta, Auth0, Azure AD, Google, etc.
AUTH_OAUTH_ENABLED=false
AUTH_OAUTH_BASE_URL=http://localhost:8080
AUTH_OAUTH_ISSUER=
AUTH_OAUTH_CLIENT_ID=
AUTH_OAUTH_CLIENT_SECRET=
AUTH_OAUTH_DEFAULT_ROLE=viewer
AUTH_OAUTH_AUTO_CREATE_USERS=true

# Rate Limiting
RATE_LIMIT_PER_USER_HOURLY=1000
RATE_LIMIT_PER_IP_MINUTE=100

# AWS (Production only)
AWS_REGION=us-east-1
AWS_SECRET_PREFIX=mcp-gateway

# Monitoring
PROMETHEUS_PORT=9090
PROMETHEUS_ENABLED=true
